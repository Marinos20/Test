{{#> admin}}
  {{#*inline "content"}}
   
    <!-- Author: FormBold Team -->
    <div class="text-lg font-bold mb-3">
        Edit  a Event
    </div>
    <div class="mx-auto w-full max-w-[550px] bg-white p-4">
        <form action="/tickets/update/{{ viewData.ticket.id }}" method="post" enctype="multipart/form-data">
             <div class="-mx-3 flex flex-wrap">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="title" class="mb-3 block text-base font-medium text-[#07074D]">
                            TITLE
                        </label>
                        <input type="text" name="title" id="title" value="{{ viewData.ticket.title }}"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>
                </div>
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="time" class="mb-3 block text-base font-medium text-[#07074D]">
                          GROUP
                        </label>
                        <input type="text" name="group" id="group" value="{{ viewData.ticket.group }}"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>
                </div>
            </div>
            <div class="-mx-3 flex flex-wrap">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="date" class="mb-3 block text-base font-medium text-[#07074D]">
                            DATE
                        </label>
                        <input type="date" name="date" id="date" value="{{ viewData.ticket.date }}"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>
                </div>
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="time" class="mb-3 block text-base font-medium text-[#07074D]">
                            PRICE
                        </label>
                        <input type="number" name="price" id="price" value="{{ viewData.ticket.price  }}"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>
                </div>
            </div>
            <div class="-mx-3 flex flex-wrap">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="date" class="mb-3 block text-base font-medium text-[#07074D]">
                            GENRE
                        </label>
                        <input type="text" name="genre" id="genre" value="{{ viewData.ticket.genre }}"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>
                </div>
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="time" class="mb-3 block text-base font-medium text-[#07074D]">
                           LOCATION 
                        </label>
                        <input type="text" name="location" id="location" value="{{ viewData.ticket.location }}"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>
                </div>
            </div>

               <div class="mb-5">
                <label for="description" class="mb-3 block text-base font-medium text-[#07074D]">
                   DESCRIPTION
                </label>
                <textarea type="text" name="description" id="description" value="{{ viewData.ticket.description }}"
                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-black outline-none focus:border-[#6A64F1] focus:shadow-md"  > {{ viewData.ticket.description  }}
                </textarea>
            </div>

            <div class="py-5 bg-white px-2">
    <div class="w-full mx-auto rounded-lg overflow-hidden ">
        <div class="md:flex">
            <div class="w-full px-3">
                <div class="relative border-dotted h-48 rounded-lg border-dashed border-2 border-blue-700 bg-gray-100 flex justify-center items-center">

                  <div class="absolute">
                    
                    <div class="flex flex-col items-center">
                      <i class="fa fa-folder-open fa-4x text-blue-700"></i>
                    <span class="block text-gray-400 font-normal">Attach you files here</span>
                    </div>
                  </div>

                  <input type="file" class="h-full w-full opacity-0" name="image_url" accept="image/png, image/jpeg">

                </div>
            </div>
        </div>
    </div>
</div>
    
            <div>
                <button
                    type="submit"
                    class="hover:shadow-form w-full rounded-md bg-[#6A64F1] py-3 px-8 text-center text-base font-semibold text-white outline-none bg-blue-800">
                    Update Event
                </button>
            </div>
        </form>
    </div>
</div>
  {{/inline}}
{{/admin}}